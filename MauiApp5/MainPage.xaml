<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp5.MainPage"
             Title="Login">
    <ScrollView>
        <StackLayout Margin="20">
            <Entry x:Name="UsernameEntry" Placeholder="Nombre De La Tienda" />
            <Entry x:Name="PasswordEntry" Placeholder="Sube Un Url Para La Foto De La Tienda"/>
            <StackLayout Orientation="Horizontal">
                <CheckBox x:Name="RememberMeCheckbox" VerticalOptions="Center" />
                <Label Text="Remember Me" VerticalOptions="Center" />
            </StackLayout>
            <Button Text="Login" Clicked="OnLoginButtonClicked" />
            <Image x:Name="ImageUrl" HeightRequest="80" />
        </StackLayout>
        
    </ScrollView>
</ContentPage>